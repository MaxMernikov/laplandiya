- title ||= 'Вас может заинтересовать:'
- if kit_codes.present?
  .recommendations
    .container
      .row
        .col-md-12.text-center
          .other-product-title
            = title
        - kit_codes.each do |kit_code|
          - kit = Kit.parse_code(kit_code)
          .col-md-2
            = link_to kit_path(kit_code), class: 'composition-item' do
              .composition-body.text-center
                .composition-image
                  = image_tag(kit[:packing].image(:preview))
                .composition-info
                  .composition-code
                    № #{kit_code}
                  .composition-link-text
                    ОТКРЫТЬ >