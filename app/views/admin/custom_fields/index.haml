.page-header
  %h1
    = I18n.t('activerecord.models.customfield')
    / = link_to 'new', new_resource_url, class: 'btn btn-default pull-right'

- if collection.present?
  %table.table
    %thead
      %tr
        %th= I18n.t('activerecord.attributes.custom_field.title')
        %th= I18n.t('activerecord.attributes.custom_field.value')
        %th
    %tbody
      - collection.each do |col|
        %tr
          %td{title: "#{col.pos}: #{col.key}"}= col.title
          %td= custom(col.key)
          %td
            .pull-right.controls
              = link_to 'edit', edit_resource_url(col), class: 'btn btn-default'
              / = link_to 'delete', resource_url(col), method: :delete, class: 'btn btn-default'